#!/usr/bin/env ruby

require 'trex'
require 'grio/dsl'

$: << File.expand_path(File.join(Trex.vendor_dir, "screen", "lib"))
$: << wallet_lib_dir=File.expand_path(File.join(Trex.vendor_dir, "wallet", "lib"))

require 'wallet'
require 'trex/socket_api' if socket = ARGV.index("--socket")

wallet = Wallet.new

unless ARGV.index("--withdraw") or ARGV.index("--withdrawals") or ARGV.index("--withdrawals")
  wallet.init 
  wallet.run if socket
else
  def wallet.message *o
    puts *o
  end

  cmd = [:withdraw, :withdrawals].find do |a|
    ARGV.index "--#{a}"
  end
  
  a = []
  ARGV.each do |q|
    a << q if q !~ /^\-\-/
  end
  
  wallet.execute cmd, *a if cmd
end
